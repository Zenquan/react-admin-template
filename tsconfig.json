{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src"],
  "paths": {
    "@/*": [
      "src/*"
    ],
    "pages/*": [
      "src/pages/*"
    ],
    "utils/*": [
      "src/utils/*"
    ],
    "services/*": [
      "src/services/*"
    ],
    "stores/*": [
      "src/stores/*"
    ],
    "components": [
      "src/components/*"
    ],
    "layout": [
      "src/layout/*"
    ],
    "hooks": [
      "src/hooks/*"
    ]
  }
}
