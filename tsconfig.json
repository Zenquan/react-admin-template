{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "stores/*": [
        "src/stores/*"
      ],
      "components": [
        "src/components/*"
      ],
      "layout": [
        "src/layout/*"
      ],
      "hooks": [
        "src/hooks/*"
      ]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "./server",
    "node_modules"
  ]
}